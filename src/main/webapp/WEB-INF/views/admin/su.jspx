<div xmlns:sec="http://www.springframework.org/security/tags" xmlns:c="http://java.sun.com/jsp/jstl/core"  xmlns:field="urn:jsptagdir:/WEB-INF/tags/form/fields" xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:page="urn:jsptagdir:/WEB-INF/tags/form"
    xmlns:spring="http://www.springframework.org/tags" class="container"
	>
    <jsp:directive.page contentType="text/html;charset=UTF-8"/>
	<jsp:output omit-xml-declaration="yes" />

    <div class="jumbotron">
		<spring:message code="su_help_msg" htmlEscape="false" />    
	</div>
    
    <spring:url value="/login/impersonate" var="su_url"/>
    <form class="form-horizontal" action="${su_url}" method="GET">
     <fieldset>
	     <div class="form-group">
		      <label for="_uid_id"><spring:message code="su_input_login" htmlEscape="false" /></label>
		      <input type="text"  placeholder="login" id="username"  name="username" maxlength="100" class="autocompleteLogin form-control"/>
	      </div>
	      <div class="form-group">
	      	<button type="submit" class="btn btn-success">SU</button>
	      </div>
      </fieldset>
    </form>
</div>
